<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgItemPopularMovie"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        app:layout_constraintBottom_toTopOf="@id/tvItemPopularTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner4"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_panorama"
        tools:background="@color/light_black" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemPopularTitle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_item_popular_overview"
        app:layout_constraintEnd_toEndOf="@id/imgItemPopularMovie"
        app:layout_constraintStart_toStartOf="@id/imgItemPopularMovie"
        app:layout_constraintTop_toBottomOf="@id/imgItemPopularMovie"
        tools:text="Maze Runner - The Guide to the Glade" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_popular_overview"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgItemPopularMovie"
        app:layout_constraintStart_toStartOf="@id/imgItemPopularMovie"
        app:layout_constraintTop_toBottomOf="@id/tvItemPopularTitle"
        tools:text="Maze Runner - The Guide to the Glade" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemPopularGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/bg_yellow_rounded_3"
        android:paddingHorizontal="4dp"
        android:paddingVertical="@dimen/dimen_2dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/imgItemPopularMovie"
        app:layout_constraintEnd_toEndOf="@id/imgItemPopularMovie"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/imgItemPopularMovie"
        app:layout_constraintTop_toTopOf="@id/imgItemPopularMovie"
        app:layout_constraintVertical_bias="1"
        tools:text="Action" />

</androidx.constraintlayout.widget.ConstraintLayout>