<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgItemFavoriteMovie"
        android:layout_width="@dimen/dimen_164dp"
        android:layout_height="@dimen/dimen_90dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvItemFavoriteTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_panorama"
        tools:background="@color/light_black" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemFavoriteTitle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tvItemFavoriteYear"
        app:layout_constraintEnd_toStartOf="@id/btnItemFavoriteAddToFavorite"
        app:layout_constraintStart_toEndOf="@id/imgItemFavoriteMovie"
        app:layout_constraintTop_toTopOf="@id/imgItemFavoriteMovie"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Itaewon Class" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnItemFavoriteAddToFavorite"
        style="@style/Widget.App.Button.Circle"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        app:icon="@drawable/ic_favorite"
        app:layout_constraintBottom_toTopOf="@id/tvItemFavoriteYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvItemFavoriteTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemFavoriteYear"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvItemFavoriteGenres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemFavoriteTitle"
        app:layout_constraintTop_toBottomOf="@id/tvItemFavoriteTitle"
        tools:text="2020" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemFavoriteGenres"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/more_more_trans_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemFavoriteTitle"
        app:layout_constraintTop_toBottomOf="@id/tvItemFavoriteYear"
        tools:text="Drama, Asian, Comedy, Series" />

</androidx.constraintlayout.widget.ConstraintLayout>