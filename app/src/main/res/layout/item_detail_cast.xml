<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_margin="@dimen/dimen_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civItemDetailCast"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_person"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:layout_constraintBottom_toTopOf="@id/tvItemDetailCast"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemDetailCast"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/civItemDetailCast"
        app:layout_constraintEnd_toEndOf="@id/civItemDetailCast"
        app:layout_constraintTop_toBottomOf="@id/civItemDetailCast"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Dave Franco"/>

</androidx.constraintlayout.widget.ConstraintLayout>